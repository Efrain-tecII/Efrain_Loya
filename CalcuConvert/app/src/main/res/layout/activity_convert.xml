<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.calcuconvert.app.ConvertActivity">

    <TextView
        android:id="@+id/result"
        android:textSize="30sp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="0"
        />

    <android.inputmethodservice.ExtractEditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Valor"
        android:hint="ingrese el valor en °Grados a Convertir"
        android:layout_below="@+id/result"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="°F"
        android:id="@+id/btnF"
        android:layout_alignTop="@+id/btnC"
        android:layout_alignLeft="@+id/Valor"
        android:layout_alignStart="@+id/Valor"
        android:layout_marginLeft="38dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="°C"
        android:id="@+id/btnC"
        android:layout_below="@+id/Valor"
        android:layout_alignRight="@+id/Valor"
        android:layout_alignEnd="@+id/Valor"
        android:layout_marginRight="45dp" />

</RelativeLayout>
